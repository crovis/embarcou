<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>IndexControllerServlet</servlet-name>
        <servlet-class>com.embarcou.controller.IndexControllerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminControllerServlet</servlet-name>
        <servlet-class>com.embarcou.controller.AdminControllerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViacaoControllerServlet</servlet-name>
        <servlet-class>com.embarcou.controller.ViacaoControllerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TrechoControllerServlet</servlet-name>
        <servlet-class>com.embarcou.controller.TrechoControllerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RodoviariaControllerServlet</servlet-name>
        <servlet-class>com.embarcou.controller.RodoviariaControllerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BuscarControllerServlet</servlet-name>
        <servlet-class>com.embarcou.controller.BuscarControllerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ErrorControllerServlet</servlet-name>
        <servlet-class>com.embarcou.controller.ErrorControllerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Equipe</servlet-name>
        <servlet-class>com.embarcou.controller.EquipeControllerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>IndexControllerServlet</servlet-name>
        <url-pattern>/inicio</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminControllerServlet</servlet-name>
        <url-pattern>/admin/</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViacaoControllerServlet</servlet-name>
        <url-pattern>/admin/viacoes/</url-pattern>
        <url-pattern>/admin/viacoes/nova</url-pattern>
        <url-pattern>/admin/viacoes/nova_viacao</url-pattern>
        <url-pattern>/admin/viacoes/delete</url-pattern>
        <url-pattern>/admin/viacoes/edit</url-pattern>
        <url-pattern>/admin/viacoes/edit_viacao</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TrechoControllerServlet</servlet-name>
        <url-pattern>/admin/trechos/</url-pattern>
        <url-pattern>/admin/trechos/nova</url-pattern>
        <url-pattern>/admin/trechos/novo_trecho</url-pattern>
        <url-pattern>/admin/trechos/delete</url-pattern>
        <url-pattern>/admin/trechos/editar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RodoviariaControllerServlet</servlet-name>
        <url-pattern>/admin/rodoviarias/</url-pattern>
        <url-pattern>/admin/rodoviarias/nova</url-pattern>
        <url-pattern>/admin/rodoviarias/nova_rodoviaria</url-pattern>
        <url-pattern>/admin/rodoviarias/edit</url-pattern>
        <url-pattern>/admin/rodoviarias/delete</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BuscarControllerServlet</servlet-name>
        <url-pattern>/buscar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ErrorControllerServlet</servlet-name>
        <url-pattern>/Error</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Equipe</servlet-name>
        <url-pattern>/equipe</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>inicio</welcome-file>
    </welcome-file-list>
    <error-page>
        <error-code>404</error-code>
        <location>/404.jsp</location>
    </error-page>
    <error-page>
        <exception-type>java.lang.NumberFormatException</exception-type>
        <location>/Error</location>
    </error-page>
    <security-constraint>
        <display-name>Admin</display-name>
        <web-resource-collection>
            <web-resource-name>Admin</web-resource-name>
            <description/>
            <url-pattern>/admin/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description>Access admin</description>
            <role-name>AdminRole</role-name>
        </auth-constraint>
    </security-constraint>
    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>file</realm-name>
        <form-login-config>
            <form-login-page>/login.jsp</form-login-page>
            <form-error-page>/erro.jsp</form-error-page>
        </form-login-config>
    </login-config>
    <security-role>
        <description/>
        <role-name>AdminRole</role-name>
    </security-role>
</web-app>
